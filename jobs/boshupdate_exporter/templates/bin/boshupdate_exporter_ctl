#!/usr/bin/env bash

set -eu

RUN_DIR=/var/vcap/sys/run/boshupdate_exporter
LOG_DIR=/var/vcap/sys/log/boshupdate_exporter
TMP_DIR=/var/vcap/sys/tmp/boshupdate_exporter
STORE_DIR=/var/vcap/store/boshupdate_exporter
mkdir -p ${RUN_DIR} ${LOG_DIR} ${TMP_DIR} ${STORE_DIR}

PIDFILE=${RUN_DIR}/boshupdate_exporter.pid

source /var/vcap/packages/boshupdate_exporter/common/utils.sh
exec 1>> ${LOG_DIR}/$(basename "$0").stdout.log
exec 2>> ${LOG_DIR}/$(basename "$0").stderr.log

export PATH=/var/vcap/packages/boshupdate_exporter/bin:${PATH}

case $1 in
  start)
  pid_guard ${PIDFILE} "boshupdate_exporter"
    echo $$ > ${PIDFILE}

    <% if_p('env.http_proxy') do |http_proxy| %>
    export HTTP_PROXY="<%= http_proxy %>"
    export http_proxy="<%= http_proxy %>"
    <% end %>
    <% if_p('env.https_proxy') do |https_proxy| %>
    export HTTPS_PROXY="<%= https_proxy %>"
    export https_proxy="<%= https_proxy %>"
    <% end %>
    <% if_p('env.no_proxy') do |no_proxy| %>
    export NO_PROXY="<%= no_proxy %>"
    export no_proxy="<%= no_proxy %>"
    <% end %>

    exec boshupdate_exporter \
      --config "/var/vcap/jobs/boshupdate_exporter/config/config.yml" \
      <% if_p('boshupdate_exporter.log_format') do |log_format| %> \
      --log.format="<%= log_format %>" \
      <% end %> \
      <% if_p('boshupdate_exporter.log_level') do |log_level| %> \
      --log.level="<%= log_level %>" \
      <% end %> \
      --metrics.environment="<%= p('boshupdate_exporter.metrics.environment') %>" \
      <% if_p('boshupdate_exporter.metrics.namespace') do |namespace| %> \
      --metrics.namespace="<%= namespace %>" \
      <% end %> \
      --web.listen-address=":<%= p('boshupdate_exporter.web.port') %>" \
      <% if_p('boshupdate_exporter.web.telemetry_path') do |telemetry_path| %> \
      --web.telemetry-path="<%= telemetry_path %>" \
      <% end %> \
      <% if_p('boshupdate_exporter.web.auth_username') do |auth_username| %> \
      --web.auth.username="<%= auth_username %>" \
      <% end %> \
      <% if_p('boshupdate_exporter.web.auth_password') do |auth_password| %> \
      --web.auth.password="<%= auth_password %>" \
      <% end %> \
      <% if_p('boshupdate_exporter.web.tls_cert', 'boshupdate_exporter.web.tls_key') do %> \
      --web.tls.cert_file="/var/vcap/jobs/boshupdate_exporter/config/web_tls_cert.pem" \
      --web.tls.key_file="/var/vcap/jobs/boshupdate_exporter/config/web_tls_key.pem" \
      <% end %> \
      >>  ${LOG_DIR}/boshupdate_exporter.stdout.log \
      2>> ${LOG_DIR}/boshupdate_exporter.stderr.log
    ;;

  stop)
    kill_and_wait ${PIDFILE}
    ;;

  *)
    echo "Usage: $0 {start|stop}"
    exit 1
    ;;

esac
exit 0
